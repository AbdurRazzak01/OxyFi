  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "solana:build": "cd solana-program && anchor build",
    "solana:test": "cd solana-program && anchor test",
    "solana:deploy:devnet": "cd solana-program && anchor deploy --provider.cluster devnet",
    "solana:deploy:mainnet": "cd solana-program && anchor deploy --provider.cluster mainnet",
    "deploy:full": "npm run build && npm run solana:build && npm run solana:deploy:devnet",
    "setup:devnet": "solana config set --url devnet && solana airdrop 2",
    "setup:mainnet": "solana config set --url mainnet-beta",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "analyze": "ANALYZE=true npm run build"
  },
